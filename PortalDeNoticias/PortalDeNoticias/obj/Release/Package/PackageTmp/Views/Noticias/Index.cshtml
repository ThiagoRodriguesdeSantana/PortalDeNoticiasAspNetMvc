@model IEnumerable<PortalDeNoticias.Models.Noticia>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Nova Notícia", "Novo")
</p>

@foreach (var item in Model)
{
    <p>


    </p>
    <div class="panel panel-default">
        <div class="panel-heading">
            <p class="panel-title">@item.Titulo</p>
        </div>
        <div class="panel-body">
            <p>@item.Conteudo.Substring(0, 10) ...</p>
        </div>
        <div class="panel-footer">
            @Html.ActionLink("Ler Mais", "Detalhes", new { id = @item.Id }, new { @class = "btn btn-default" })
            @Html.ActionLink("Excluir Notícia", "Excluir", new { id = @item.Id }, new { @class = "btn btn-default" })
            @Html.ActionLink("Editar Notícia", "Editar", new { id = @item.Id }, new { @class = "btn btn-default" })
        </div>
    </div>

}
