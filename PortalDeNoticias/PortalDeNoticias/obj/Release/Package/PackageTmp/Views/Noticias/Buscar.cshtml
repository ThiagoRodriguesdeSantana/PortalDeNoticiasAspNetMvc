@model IEnumerable<PortalDeNoticias.Models.Noticia>

@{
    ViewBag.Title = "Buscar";
}



@foreach (var item in Model)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <p class="panel-title">@item.Titulo</p>
        </div>
        <div class="panel-body">
            <p>@item.Conteudo.Substring(0, 10) ...</p>
        </div>
        <div class="panel-footer">
            @Html.ActionLink("Ler Mais", "Detalhes", new { id = @item.Id }, new { @class = "btn btn-default" })
        </div>

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Voltar Para Pagina Principal", "Index")
        </div>
    </div>

}
